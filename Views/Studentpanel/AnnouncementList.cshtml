@using MVC5Library.Models
@model List<TBLAnnouncement>

<div class="timeline timeline-inverse">
    @foreach (var item in Model)
    {
        <!-- timeline time label -->
        <div class="time-label">
            <span class="bg-danger">
                @Convert.ToDateTime(item.AnnouncementDate).ToString("dd/MM/yyyy")
            </span>
        </div>
        <!-- /.timeline-label -->
        <!-- timeline item -->
        <div>
            <i class="fas fa-envelope bg-dark"></i>
            <div class="timeline-item">
                <span class="time"><i class="far fa-clock"></i> @Convert.ToDateTime(item.AnnouncementDate).ToString("dd/MM/yyyy")</span>
                <h3 class="timeline-header"><a href="" style="color:black;">Admin </a> @item.AnnouncementCategory</h3>
                <div class="timeline-body">
                    @item.AnnouncementContent
                </div>
            </div>
        </div>
        <!-- END timeline item -->
    }
</div>