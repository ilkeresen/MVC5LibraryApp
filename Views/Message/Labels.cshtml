
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Etiketler</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-circle text-danger"></i> Önemli
                    <span class="badge bg-danger float-right">@ViewBag.ImportantMessage</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-circle text-warning"></i> Promosyon
                    <span class="badge bg-warning float-right">@ViewBag.PromotionsMessage</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-circle text-primary"></i> Sosyal
                    <span class="badge bg-primary float-right">@ViewBag.SocialMessage</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-circle text-dark"></i> Etiketsiz
                    <span class="badge bg-dark float-right">@ViewBag.NeMessage</span>
                </a>
            </li>
        </ul>
    </div>
    <!-- /.card-body -->
</div>