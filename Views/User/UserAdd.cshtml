@model MVC5Library.Models.TBLUser
@{
    ViewBag.Title = "UserAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="card">
            <div class="card card-gray-dark">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-plus"></i> Yeni Kullanıcı Ekle</h3>
                </div>
            </div>
            <form method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label for="UserName">Kullanıcı Ad</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user-plus"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.UserName, new { @type = "text", @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="UserSurname">Kullanıcı Soyad</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user-plus"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.UserSurname, new { @type = "text", @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="UserMail">Kullanıcı E-Posta</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.UserMail, new { @type = "email", @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="UserNickName">Kullanıcı Ad(NickName)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user-plus"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.UserNickName, new { @type = "text", @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="UserPassword">Kullanıcı Şifre</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user-plus"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.UserPassword, new { @type = "text", @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">

                        @*@Html.TextBoxFor(x => x.UserPhoto, new { @type = "text", @class = "form-control", @required = "required" })*@
                        
                        <label>Kullanıcı Resmi</label>

                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <label for="UserPhoto1">
                                    <img alt="Avatar" for="UserPhoto1" class="img-circle img-size-64" src="~/AdminTema/dist/img/avatar1.png">
                                </label>
                                <input type="radio" name="UserPhoto" id="UserPhoto1" value="~/AdminTema/dist/img/avatar1.png" checked />
                            </li>
                            <li class="list-inline-item">
                                <label for="UserPhoto2">
                                    <img alt="Avatar" for="UserPhoto1" class="img-circle img-size-64" src="~/AdminTema/dist/img/avatar2.png">
                                </label>
                                <input type="radio" name="UserPhoto" id="UserPhoto2" value="~/AdminTema/dist/img/avatar2.png" />
                            </li>
                            <li class="list-inline-item">
                                <label for="UserPhoto3">
                                    <img alt="Avatar" for="UserPhoto1" class="img-circle img-size-64" src="~/AdminTema/dist/img/avatar3.png">
                                </label>
                                <input type="radio" name="UserPhoto" id="UserPhoto3" value="~/AdminTema/dist/img/avatar3.png" />
                            </li>
                            <li class="list-inline-item">
                                <label for="UserPhoto4">
                                    <img alt="Avatar" for="UserPhoto1" class="img-circle img-size-64" src="~/AdminTema/dist/img/avatar4.png">
                                </label>
                                <input type="radio" name="UserPhoto" id="UserPhoto4" value="~/AdminTema/dist/img/avatar4.png" />
                            </li>
                            <li class="list-inline-item">
                                <label for="UserPhoto5">
                                    <img alt="Avatar" for="UserPhoto1" class="img-circle img-size-64" src="~/AdminTema/dist/img/avatar5.png">
                                </label>
                                <input type="radio" name="UserPhoto" id="UserPhoto5" value="~/AdminTema/dist/img/avatar5.png" />
                            </li>
                        </ul>


                    </div>

                    <div class="form-group">
                        <label for="UserPhone">Kullanıcı Telefon</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.UserPhone, new { @id = "tell", @type = "text", @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="UserSchool">Kullanıcı Okul(Üni,Lise,Orta,İlk)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-school"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.UserSchool, new { @type = "text", @class = "form-control", @required = "required" })
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <button type="submit" class="btn btn-dark"><i class="fas fa-folder-plus"></i> Yeni Kitap Kaydet</button>
                </div>
            </form>
        </div>
    </div><!-- /.container-fluid -->
</section>