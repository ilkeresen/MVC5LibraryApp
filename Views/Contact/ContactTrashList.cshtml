@using MVC5Library.Models
@model List<TBLContact>
@{
    ViewBag.Title = "ContactTrashList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Çöp Kutusu</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("Folders", "Contact")
            <!-- /.card -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="card card-dark">
                <div class="card-header">
                    <h3 class="card-title">Çöp Kutusu</h3>
                    <!-- /.card-tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body p-2">
                    <table id="example1" class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Mesaj Gönderen İsim
                                </th>
                                <th>
                                    Mesaj Gönderen E-Posta
                                </th>
                                <th>
                                    Mesaj Gönderen Konu - İçerik
                                </th>
                                <th>
                                    Mesaj Tarih
                                </th>
                                <th>
                                    Mesaj Sil
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0; }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(++i)
                                    </td>
                                    <td class="mailbox-star">
                                        @item.ContactName
                                    </td>
                                    <td class="mailbox-name"><a href="/Contact/ContactDetail/@item.ContactID">@item.ContactMail</a></td>
                                    <td class="mailbox-subject">
                                        <b>@item.ContactSubject</b> -

                                        @{string metin = System.Text.RegularExpressions.Regex.Replace(item.ContactMessage, @"<(.|\n)*?>", string.Empty); }
                                        @Html.Raw(metin.Substring(0, metin.Length > 9 ? 9 : metin.Length))...
                                    </td>
                                    <td class="mailbox-date">@Convert.ToDateTime(item.ContactDate).ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a href="/Contact/ContactDelete/@item.ContactID" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                            Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Mesaj Gönderen İsim
                                </th>
                                <th>
                                    Mesaj Gönderen E-Posta
                                </th>
                                <th>
                                    Mesaj Gönderen Konu - İçerik
                                </th>
                                <th>
                                    Mesaj Tarih
                                </th>
                                <th>
                                    Mesaj Sil
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                    <!-- /.table -->
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
