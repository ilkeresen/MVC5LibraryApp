@model MVC5Library.Models.TBLAnnouncement
@{
    ViewBag.Title = "AnnouncementAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="card">
            <div class="card card-gray-dark">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-plus"></i> Yeni Duyuru Ekle</h3>
                </div>
            </div>
            <form method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label for="AnnouncementCategory">Duyuru Kategori</label>
                        <div class="input-group">
                            @Html.DropDownListFor(x => x.AnnouncementCategory, (List<SelectListItem>)ViewBag.Category, "Kategori Seçiniz", new { @id = "BookCategory", @class = "form-control select2" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="UserSurname">Duyuru İçerik</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-keyboard"></i></span>
                            </div>
                            @Html.TextAreaFor(x => x.AnnouncementContent, new { @type = "text", @rows=5, @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="AnnouncementDate">Duyuru Tarih</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                            </div>
                            <input type="text" class="form-control" name="AnnouncementDate" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                            @*@Html.TextBoxFor(x => x.AnnouncementDate, new { @type = "text", @class = "form-control", @required = "required" })*@
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <button type="submit" class="btn btn-dark"><i class="fas fa-folder-plus"></i> Yeni Duyuru Kaydet</button>
                </div>
            </form>
        </div>
    </div><!-- /.container-fluid -->
</section>

